[
  {
    "type": "formly-group",
    "fieldGroup": [
      {
        "type": "formly-group-card",
        "fieldGroup": [
          {
            "type": "input",
            "wrappers": ["form-field"],
            "templateOptions": {
              "label": "Label",
              "placeholder": "Placeholder",
              "description": "Description",
              "required": true
            },
            "key": "input"
          },
          {
            "type": "number",
            "wrappers": ["form-field"],
            "templateOptions": {
              "label": "Label",
              "placeholder": "Placeholder",
              "description": "Description",
              "required": true,
              "type": "number"
            },
            "key": "number"
          },
          {
            "type": "textarea",
            "wrappers": ["form-field"],
            "templateOptions": {
              "label": "Label",
              "placeholder": "Placeholder",
              "description": "Description",
              "required": true
            },
            "key": "textarea",
            "className": "col-span-2"
          }
        ],
        "key": "card",
        "fieldGroupClassName": "gap-2 grid grid-cols-2",
        "templateOptions": {
          "cardTitle": "Title!"
        }
      },
      {
        "type": "repeating-section",
        "templateOptions": {
          "addText": "Add Section"
        },
        "fieldArray": {
          "type": "formly-group",
          "fieldGroup": [
            {
              "type": "radio",
              "wrappers": ["form-field"],
              "templateOptions": {
                "label": "Label",
                "placeholder": "Placeholder",
                "description": "Description",
                "required": true,
                "options": [
                  {
                    "value": 1,
                    "label": "Option 1"
                  },
                  {
                    "value": 2,
                    "label": "Option 2"
                  },
                  {
                    "value": 3,
                    "label": "Option 3"
                  },
                  {
                    "value": 4,
                    "label": "Option 4",
                    "disabled": true
                  }
                ]
              },
              "key": "radio"
            },
            {
              "type": "select",
              "wrappers": ["form-field"],
              "templateOptions": {
                "label": "Label",
                "placeholder": "Placeholder",
                "description": "Description",
                "required": true,
                "multiple": true,
                "selectAllOption": "Select All",
                "options": [
                  {
                    "value": 1,
                    "label": "Option 1"
                  },
                  {
                    "value": 2,
                    "label": "Option 2"
                  },
                  {
                    "value": 3,
                    "label": "Option 3"
                  },
                  {
                    "value": 4,
                    "label": "Option 4",
                    "disabled": true
                  }
                ]
              },
              "key": "select"
            }
          ],
          "fieldGroupClassName": "grid grid-cols-2 gap-x-2"
        },
        "key": "repeat",
        "fieldGroupClassName": ""
      },
      {
        "type": "checkbox",
        "wrappers": ["form-field"],
        "templateOptions": {
          "label": "Accept terms",
          "description": "In order to proceed, please accept terms",
          "pattern": "true",
          "required": true
        },
        "validation": {
          "messages": {
            "pattern": "Please accept the terms"
          }
        },
        "key": "checkbox"
      }
    ],
    "key": "group",
    "fieldGroupClassName": "grid gap-2"
  }
]
